@model ScheduleProg.Models.CreateTeacher

@{
    ViewData["Title"] = "CreateTeacher";
   
}
<h2>Додати нового вчителя</h2>
<form method="post" asp-controller="Account" asp-action="CreateTeacher">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="First_Name">Ім'я</label><br />
        <input asp-for="First_Name" />
        <span asp-validation-for="First_Name"></span>
    </div>
    <div>
        <label asp-for="Last_Name">Прізвище</label><br />
        <input asp-for="Last_Name" />
        <span asp-validation-for="Last_Name"></span>
    </div>
    
    <div>
        <label asp-for="Email">Пошта</label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">Пароль</label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
   
    <div>
        <input type="submit" value="Створити" />
    </div>
</form>
